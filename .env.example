# ElevenLabs Voice API Configuration
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Cloudflare Workers AI Configuration
# Get your credentials from: https://dash.cloudflare.com/
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# Arc Testnet Blockchain Configuration
NEXT_PUBLIC_ARC_RPC_URL=https://rpc.testnet.arc.network
NEXT_PUBLIC_ARC_CHAIN_ID=5042002

# USDC Contract Address on Arc Testnet
# This is the native USDC contract on Arc
NEXT_PUBLIC_USDC_CONTRACT_ADDRESS=0x3600000000000000000000000000000000000000

# Test Wallet Configuration (For Development Only)
# SECURITY WARNING: Never commit real private keys to version control
# These should only be used with testnet wallets containing test funds
TEST_PRIVATE_KEY=0xYOUR_TEST_WALLET_PRIVATE_KEY_HERE
NEXT_PUBLIC_TEST_WALLET_ADDRESS=0xYOUR_TEST_WALLET_ADDRESS_HERE

# Application Configuration
NEXT_PUBLIC_APP_NAME=VoicePay Arc
NEXT_PUBLIC_APP_ENV=development

# Voice Processing Settings
NEXT_PUBLIC_MAX_RECORDING_DURATION=10000
NEXT_PUBLIC_MIN_RECORDING_DURATION=1000

# Transaction Settings
NEXT_PUBLIC_MIN_USDC_AMOUNT=0.01
NEXT_PUBLIC_MAX_USDC_AMOUNT=10000

# API Settings
NEXT_PUBLIC_API_TIMEOUT=30000

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_CONFIRMATION=true
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
NEXT_PUBLIC_ENABLE_MULTI_LANGUAGE=false

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# Notes:
# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local to version control
# 3. For production, use environment-specific configurations
# 4. Test wallet should only contain testnet tokens
# 5. Get testnet USDC from Arc Testnet faucet
