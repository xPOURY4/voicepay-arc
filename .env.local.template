# VoicePay Arc - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================================================
# API Keys - REQUIRED
# ============================================================================

# ElevenLabs Voice API
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=

# Cloudflare Workers AI
# Get from: https://dash.cloudflare.com/ → Workers & Pages → AI
CLOUDFLARE_API_KEY=
CLOUDFLARE_ACCOUNT_ID=

# ============================================================================
# Arc Blockchain Configuration - REQUIRED
# ============================================================================

# Arc Testnet RPC URL (keep as is)
NEXT_PUBLIC_ARC_RPC_URL=https://rpc.testnet.arc.network

# Arc Testnet Chain ID (keep as is)
NEXT_PUBLIC_ARC_CHAIN_ID=5042002

# USDC Contract Address on Arc Testnet (keep as is)
NEXT_PUBLIC_USDC_CONTRACT_ADDRESS=0x3600000000000000000000000000000000000000

# ============================================================================
# Test Wallet Configuration - REQUIRED
# ⚠️ WARNING: ONLY USE TESTNET WALLETS - NEVER MAINNET PRIVATE KEYS!
# ============================================================================

# Your testnet wallet private key (starts with 0x)
# Example: 0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
TEST_PRIVATE_KEY=

# Your testnet wallet address (starts with 0x)
# Example: 0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb
NEXT_PUBLIC_TEST_WALLET_ADDRESS=

# ============================================================================
# Application Settings - OPTIONAL
# ============================================================================

# Application name
NEXT_PUBLIC_APP_NAME=VoicePay Arc

# Environment (development, staging, production)
NEXT_PUBLIC_APP_ENV=development

# ============================================================================
# Voice Processing Settings - OPTIONAL
# ============================================================================

# Maximum recording duration in milliseconds (default: 10000 = 10 seconds)
NEXT_PUBLIC_MAX_RECORDING_DURATION=10000

# Minimum recording duration in milliseconds (default: 1000 = 1 second)
NEXT_PUBLIC_MIN_RECORDING_DURATION=1000

# ============================================================================
# Transaction Settings - OPTIONAL
# ============================================================================

# Minimum USDC transaction amount (default: 0.01)
NEXT_PUBLIC_MIN_USDC_AMOUNT=0.01

# Maximum USDC transaction amount (default: 10000)
NEXT_PUBLIC_MAX_USDC_AMOUNT=10000

# ============================================================================
# API Settings - OPTIONAL
# ============================================================================

# API request timeout in milliseconds (default: 30000 = 30 seconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Feature Flags - OPTIONAL
# ============================================================================

# Enable voice confirmation before transactions (true/false)
NEXT_PUBLIC_ENABLE_VOICE_CONFIRMATION=true

# Enable biometric authentication (true/false) - Not yet implemented
NEXT_PUBLIC_ENABLE_BIOMETRIC_AUTH=false

# Enable multi-language support (true/false) - Not yet implemented
NEXT_PUBLIC_ENABLE_MULTI_LANGUAGE=false

# Enable debug mode (true/false)
NEXT_PUBLIC_DEBUG=false

# ============================================================================
# Analytics & Monitoring - OPTIONAL
# ============================================================================

# Google Analytics ID (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# ============================================================================
# SETUP INSTRUCTIONS
# ============================================================================
#
# 1. Copy this file:
#    cp .env.local.template .env.local
#
# 2. Fill in required values:
#    - ELEVENLABS_API_KEY
#    - CLOUDFLARE_API_KEY
#    - CLOUDFLARE_ACCOUNT_ID
#    - TEST_PRIVATE_KEY
#    - NEXT_PUBLIC_TEST_WALLET_ADDRESS
#
# 3. Get testnet tokens (optional for real transactions):
#    - ETH: https://faucet.arc.network
#    - USDC: https://faucet.circle.com
#
# 4. Start the app:
#    npm run dev
#
# 5. Open browser:
#    http://localhost:3000
#
# ============================================================================
# SECURITY NOTES
# ============================================================================
#
# ⚠️ NEVER commit .env.local to version control
# ⚠️ NEVER use mainnet private keys in development
# ⚠️ NEVER share your private keys or API keys
# ⚠️ Only use test wallets with test funds
# ⚠️ Rotate API keys regularly
# ⚠️ Use different keys for different environments
#
# ============================================================================
